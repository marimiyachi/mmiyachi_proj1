<% provide(:title, "Sign in") %>
<h1> Sign in </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :name, "Username" %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.text_field :password %>

      <%= f.submit "Sign in" %>
    <% end %>
  </div>
</div>
